
@model IEnumerable< Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table ">
    <thead>
        <tr>

            <th>Id</th>
            <th>Role</th>
            <th>Usuarios</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
        <tr>

            <td>@role.Id</td>
            <td>@role.Name</td>
            <td user-role="@role.Id"></td>



            <td>
                <a asp-action="Edit" asp-route-id="@role.Id">Editar</a> |
                <a class="confirmDeletion" asp-action="Delete" asp-route-id="@role.Id">Eliminar</a> |

                

            </td>
        </tr>
        }
    </tbody>
</table>



