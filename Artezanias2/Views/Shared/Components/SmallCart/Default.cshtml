@model SmallCartViewModel

@if (Model != null)
{
    <p>  Artículo en carrito: <span class="badge badge-primary">@Model.NumberOfItems</span></p>
    <p>Total: <b> @Model.TotalAmount.ToString("C2")</b></p>
    <a class="btn btn-primary mb-2" asp-controller="Cart" asp-action="index">Ver carrito</a>
    <br />
    <a class="btn btn-danger" asp-controller="Cart" asp-action="Clear">Limpiar carrito</a>


}
else
{
<p class="lead m-0"> Tu carrito esta vacío</p>
}
