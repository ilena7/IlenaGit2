@model RoleEdit

@{
    ViewData["Title"] = "Edit Roles";
}

<h1>Editar Roles</h1>


<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <input type="hidden" name="RoleName" value="@Model.Role.Name" />
            <div class="row">
                <div class="col-6">
                    <h2>Agregar usuarios a  <span class="badge badge-primary">@Model.Role.Name</span></h2>
                    <table class="table table-bordered">
                        @if (Model.NonMembers.Count()==0)
                        {
                            <tr><td>Todos los usuarios son miembros.</td></tr>


                        }
                        else
                        {
                            foreach (AppUser user in Model.NonMembers)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>
                                        <input type="checkbox" value="@user.Id" name="AddIds"/>
                                    </td>
                                </tr>

                            }
                        }
                    </table>
                </div>
                <div class="col-6">
                    <h2>Eliminar usuarios de <span class="badge badge-primary">@Model.Role.Name</span></h2>
                    <table class="table table-bordered">
                        @if (Model.Members.Count() == 0)
                        {
                            <tr><td> Ningun usuarios es miembro.</td></tr>


                        }
                        else
                        {
                            foreach (AppUser user in Model.Members)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>
                                        <input type="checkbox" value="@user.Id" name="DeleteIds" />
                                    </td>
                                </tr>

                            }
                        }
                    </table>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

